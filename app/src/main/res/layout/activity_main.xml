<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <LinearLayout
            android:id="@+id/linearlayout_main_icon_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_main_icon"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <TextView
                android:id="@+id/textview_main_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="weather"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_main_city_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearlayout_main_icon_weather"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_main_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textview_main_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_main_city"
                    android:text="temp"
                    android:textSize="40sp"
                    android:layout_margin="30dp"/>
                <TextView
                    android:id="@+id/textview_main_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_main_city"
                    android:text="humidity"
                    android:textSize="40sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_main_max_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_main_city_temp"
            android:layout_toRightOf="@+id/linearlayout_main_icon_weather"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_main_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="temp_max"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_main_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp_min"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/button_main_requestjson"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:layout_weight="0.1"
        android:text="JSON 가져오기" />
</LinearLayout>